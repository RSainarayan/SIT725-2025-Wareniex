<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>New Stock Intake</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="" crossorigin="anonymous">
  </head>
  <body>
    <div class="container py-4">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4">New Stock Intake</h1>
        <div>
          <a href="/dashboard" class="btn btn-outline-secondary me-2">Home</a>
          <a href="/stock-intake" class="btn btn-secondary">Back</a>
        </div>
      </div>

      <form action="/stock-intake" method="post" class="row g-3">
        <div class="col-md-6">
          <label class="form-label">Product</label>
          <select name="product" id="product" class="form-select" required>
            <% products.forEach(function(p){ %>
              <option value="<%= p._id %>" data-weight="<%= p.weight || 0 %>" data-min-stock="<%= p.minStockLevel || 10 %>" data-current-stock="<%= p.quantity || 0 %>"><%= p.name %> (unit weight: <%= p.weight || 'N/A' %>)</option>
            <% }) %>
          </select>
        </div>

        <div class="col-md-6">
          <label class="form-label">Total Weight (kg)</label>
          <input name="totalWeight" id="totalWeight" type="number" step="0.01" min="0" required class="form-control" />
        </div>

        <div class="col-md-6">
          <label class="form-label">Calculated Quantity</label>
          <div id="calculatedQty" class="form-control-plaintext">0</div>
        </div>

        <div class="col-md-6">
          <label class="form-label">Minimum Stock Threshold</label>
          <input name="minStockLevel" id="minStockLevel" type="number" min="0" step="1" class="form-control" placeholder="Enter minimum stock level" />
          <div class="form-text">Set the minimum stock level for low stock alerts (leave empty to keep current setting)</div>
        </div>

        <div class="col-md-6">
          <label class="form-label">Received By</label>
          <input name="receivedBy" class="form-control" />
        </div>

        <div class="col-12">
          <button type="submit" class="btn btn-primary">Create Intake</button>
        </div>
      </form>
    </div>

    <script>
      const productSelect = document.getElementById('product');
      const totalInput = document.getElementById('totalWeight');
      const calculatedDiv = document.getElementById('calculatedQty');
      const minStockInput = document.getElementById('minStockLevel');

      function calc() {
        const opt = productSelect.selectedOptions[0];
        const unit = parseFloat(opt.getAttribute('data-weight')) || 0;
        const total = parseFloat(totalInput.value) || 0;
        const currentMinStock = parseInt(opt.getAttribute('data-min-stock')) || 10;
        const currentStock = parseInt(opt.getAttribute('data-current-stock')) || 0;
        
        // Update calculated quantity
        if (unit > 0 && total > 0) {
          calculatedDiv.textContent = Math.floor(total / unit);
        } else {
          calculatedDiv.textContent = 'N/A';
        }
        
        // Show current minimum stock level as placeholder
        minStockInput.placeholder = `Current: ${currentMinStock} (Stock: ${currentStock})`;
      }

      productSelect.addEventListener('change', calc);
      totalInput.addEventListener('input', calc);
      calc();
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="" crossorigin="anonymous"></script>
  </body>
</html>
